<div class="container mt-5">
    <div class="row">
        <div class="col-4 offset-4">
            <form method="POST">
                <div class="form-group">
                    <label for="amount">Сумма</label>
                    <input type="number" class="form-control" id="amount" placeholder="Введите сумму" name="amount">
                </div>
                <div class="form-group">
                    <label for="comment">Комментарии</label>
                    <input type="text" class="form-control" id="comment" placeholder="Введите комментарии"
                        name="comment">
                </div>
                <button type="submit" class="btn btn-primary">Пожертвовать</button>
            </form>
        </div>
    </div>

    {{#if paid}}
    <br><br>
    <div class="row mt-5">
        <div class="col-4 offset-4">
            <p>{{comment}} - {{amount}}</p>
        </div>
    </div>

    {{/if}}

</div>



<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>